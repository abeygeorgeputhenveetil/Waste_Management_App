<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5FFFA">



    <!-- App Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small actions today lead to a cleaner, greener tomorrow. Embrace waste management and be the change our planet needs."
        android:textSize="20sp"
        android:layout_below="@id/textViewTitle"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <!-- Schedule Waste Pickup Button -->
    <Button
        android:id="@+id/btnSchedulePickup"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@color/black"
        android:text="Schedule Waste Pickup"
        android:textColor="@android:color/white" />

    <!-- Waste Disposal Tips Button -->
    <Button
        android:id="@+id/btnWasteDisposalTips"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSchedulePickup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:text="Waste Disposal Tips"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnFindWasteLocations2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWasteDisposalTips"
        android:text="Find Waste Disposal Locations"
        android:textColor="@android:color/white"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
